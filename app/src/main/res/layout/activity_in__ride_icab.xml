<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wolfsoft.kcab.In_Ride_icab"
    android:id="@+id/inridemenu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_gravity="bottom">

        <include layout="@layout/toolbar_home_icab" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_marginBottom="20dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="164.2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="19.3dp"
                android:layout_marginRight="19.1dp"
                app:cardCornerRadius="5.8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="19.2dp"
                        android:layout_marginTop="20.8dp"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19.3dp"
                            android:text="Steve Rogers"
                            android:textColor="#323643"
                            android:textSize="13.4sp" />

                        <RatingBar
                            android:id="@+id/rtbHighScore"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:isIndicator="false"
                            android:max="100"
                            android:minHeight="10dp"
                            android:numStars="5"
                            android:progressTint="#ffba00"
                            android:rating="3"
                            android:stepSize="0.2" />
                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/rect_blue1"
                        android:text="Call Driver"
                        android:textColor="#fbfbfb"
                        android:textSize="15.4sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginTop="98.2dp"
                    android:layout_marginRight="19.2dp"
                    android:background="#33979797" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="110dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distancia"
                            android:textColor="#99606470"
                            android:textSize="11.5sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.2 mi"
                            android:textColor="#323643"
                            android:textSize="11.4sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempo"
                            android:textColor="#99606470"
                            android:textSize="11.5sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$5.99"
                            android:textColor="#323643"
                            android:textSize="11.4sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ETA"
                            android:textColor="#99606470"
                            android:textSize="11.5sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:29"
                            android:textColor="#323643"
                            android:textSize="11.4sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="#99606470"
                            android:textSize="11.5sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textColor="#323643"
                            android:textSize="11.4sp" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </FrameLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>
