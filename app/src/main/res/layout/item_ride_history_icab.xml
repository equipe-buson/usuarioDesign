<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="19.3dp"
        android:layout_marginTop="18.7dp"
        android:layout_marginRight="12.1dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#DCDCDC"
        app:cardCornerRadius="5.8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="12.4dp"
                    android:layout_marginTop="12.3dp"
                    android:src="@drawable/pin_black" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:orientation="vertical">


                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtlinha"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.3dp"
                    android:text="Phoenix Market City"
                    android:textColor="#323643"
                    android:textSize="13.4sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>